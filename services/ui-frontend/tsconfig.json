{
  "compilerOptions": {
    "jsx": "react",
    "lib":["ES6", "DOM"],
    "rootDir": "src",
    "module": "commonjs",
    "noImplicitAny": true,
    "outDir": "./build/",
    "preserveConstEnums": true,
    "removeComments": true,
    "sourceMap": true,
    "target": "es5"
  },
  "include": [
    "src/components/index.tsx"
  ],
  "exclude": [
    "node_modules",
    "build"
  ]
}