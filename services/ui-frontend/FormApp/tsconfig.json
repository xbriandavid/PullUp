{
    "compilerOptions": {
      "jsx": "react",
      "lib":["ES6", "DOM"],
      "rootDir": ".",
      "module": "commonjs",
      "noImplicitAny": true,
      "outDir": "./dist/",
      "preserveConstEnums": true,
      "removeComments": true,
      "sourceMap": true,
      "target": "es5",
      "esModuleInterop": true
    },
    "include": [
      "src/index.tsx",
      "src/__tests__/*.tsx",
      "src/__tests__/*.ts"
    ],
    "exclude": [
      "node_modules",
      "build"
    ]
}