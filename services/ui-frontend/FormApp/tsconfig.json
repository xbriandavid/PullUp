{
    "compilerOptions": {
      "jsx": "react",
      "lib":["ES6", "DOM"],
      "rootDir": "src",
      "module": "esnext",
      "noImplicitAny": true,
      "outDir": "./dist/",
      "preserveConstEnums": true,
      "removeComments": false,
      "sourceMap": true,
      "target": "es5",
      "esModuleInterop": true,
      "moduleResolution": "node"
    },
    "include": [
      "src/index.tsx",
    ],
    "exclude": [
      "node_modules",
      "build"
    ]
}